pipeline {
  environment {
    registry = 'divyabhaarathy/troubleshootingapplication-1.0'
    registryCredential = 'dockerhub'
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/divyabharathik/apimanagement.git'
      }
    }
    stage('Building image') {
      steps{
        cd 'C:\Users\y509476\apimanagement\troubleshooting\TroubleshootingApplication'
        script {
          docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
  }
}
